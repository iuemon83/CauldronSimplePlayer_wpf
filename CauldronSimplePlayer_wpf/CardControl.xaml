<UserControl x:Class="CauldronSimplePlayer_wpf.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CauldronSimplePlayer_wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Border Width="70" Height="100" BorderThickness="1"
            BorderBrush="{Binding Color.Value}">
            <TextBlock Text="{Binding DisplayText.Value}"
                   TextWrapping="Wrap">
            </TextBlock>
        </Border>
    </StackPanel>
</UserControl>
